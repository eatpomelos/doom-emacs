;;; ~/.doom.d/ui.el -*- lexical-binding: t; -*-(unless IS-WINDOWS  (setq display-time-day-and-date t)  (display-time-mode))(setq frame-title-format      '("" invocation-name " pomelo - " (:eval (if (buffer-file-name)                                                   (abbreviate-file-name (buffer-file-name))                                                 ("%b")))));; (use-package! winum;;   :defer 3;;   :init;;   (winum-mode);;   )(pushnew! initial-frame-alist '(width . 200) '(height . 55))(add-hook 'window-setup-hook #'toggle-frame-maximized);; (add-hook 'window-setup-hook #'toggle-frame-fullscreen);; 先装在这里，如果比较耗资源就删除(use-package! nyan-mode  :defer t  :init  (nyan-mode t))(when IS-WINDOWS  (define-leader-key! "sp" 'counsel-ag)  (setq locale-coding-system 'gbk-dos)  (set-default 'process-coding-system-alist               '(("[pP][lL][iI][nN][kK]" gbk-dos . gbk-dos)                 ("[cC][mM][dD][pP][rR][oO][xX][yY]" gbk-dos . gbk-dos)                 ("[rR][gG]" utf-8-dos . gbk-dos))));; 当加载了doom-modeline之后定义一些优化的东西，原来的默认形式并不是很好看(after! doom-modeline  (setq doom-modeline-major-mode-icon t)  (setq doom-modeline-major-mode-color-icon t)  (setq doom-modeline-buffer-file-name-style 'auto)  (setq doom-modeline-height 25)  ;; 这里后面的空格是因为默认的modeline会有一部分显示不出来，因此在后面加一段空白由此来显示后面的  (doom-modeline-def-modeline 'main    '(bar matches buffer-info remote-host buffer-position parrot selection-info)    '(misc-info minor-modes buffer-encoding major-mode process vcs checker "          "))  (custom-set-faces!    '(mode-line :family "Source Code Pro" :height 0.9)    '(mode-line-inactive :family "Source Code Pro" :height 0.9)    )  );; (use-package! maple-line;;   :ensure nil;;   :load-path "~/.doom.d/local/packages/emacs-maple-line/";;   :hook (after-init . maple-line-mode);;   :config;;   (setq maple-line-display-alist '((side . bottom);;                                    (slot . 0);;                                    (window-